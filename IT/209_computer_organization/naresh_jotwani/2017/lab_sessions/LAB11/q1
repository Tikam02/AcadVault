.ORIG X04

COMP B #0 R4
JEQ EVEN
MOV B #01 R10
OUT #1 R10

HALT
EVEN: MOV B #10 R10
OUT #2 R10
RET

.ORIG X400
.START X400
IN #0 R2
MOV B #1 R3
MOV B #0 R4
MOV B #0 R8
LOOP: MOV B #1 R3
AND B R2 R3
SHIFT B R NC R2 #1
ADD B #1 R8
COMP B #8 R8
JLT ANS
COMP B #1 R3
JEQ ONES
JMP LOOP
HALT
ONES: NOT B R4
JMP LOOP
HALT
ANS: MOV B #22 R12
ADD B #1 R12
JMP ANS
.END